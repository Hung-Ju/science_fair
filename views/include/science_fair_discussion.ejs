<script type="text/javascript" src="https://unpkg.com/vis-network@latest/dist/vis-network.min.js"></script>
<link href="https://unpkg.com/vis-network@latest/dist/vis-network.min.css" rel="stylesheet" type="text/css" />

<div class="row" id="vis-network" style="margin-top: 53px; padding-left: 20px;">
  <div id="mynetwork"></div>
  <!-- 左側工具欄 -->
  <div class="tools text-center">
      <h5 style="margin-top: 5px;">新增</h5>   
      <a href="#addIdea" class="tool" id="ideaTool" data-toggle="modal">
          <img src="/stylesheets/images/icons/idea(line).svg" alt="新增想法">
          <div class="tool-text">想法</div>
      </a>
      <a href="#addVote" class="tool" id="voteTool" data-toggle="modal">
          <img src="/stylesheets/images/icons/archive.svg" alt="新增投票" >
          <div class="tool-text">投票</div>
      </a>
  </div>

  <!-- 新增想法的彈出視窗 -->
  <div class="modal fade" id="addIdea" tabindex="-1" role="dialog" aria-labelledby="addIdeaCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addIdeaLongTitle">新增想法</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div id="addIdeaRoot">
              <p><b>標題</b><input class="form-control" type="text" name="idea_title" id="idea_title" required="required"></p>
              <div class="ideaTag"></div>
              <div class="row">
                  <div class="btn-group-vertical col-3">
                      <button type="button" class="btn border-color-green scaffold">我想知道</button>
                      <button type="button" class="btn border-color-green scaffold">我的想法</button>
                      <button type="button" class="btn border-color-green scaffold">我的理論</button>
                      <button type="button" class="btn border-color-green scaffold">新資訊或參考來源</button>
                      <button type="button" class="btn border-color-green scaffold">另一個觀點是</button>
                      <button type="button" class="btn border-color-green scaffold">我覺得更好的想法</button>
                      <button type="button" class="btn border-color-green scaffold">有發展性的想法</button>
                  </div>
                  <div class="col-9">
                      <textarea class="nodeEditor" id="addIdeaSummernote"></textarea>
                      <div class="input-group">
                          <div class="custom-file">
                            <input type="file" class="custom-file-input" id="inputGroupFile" aria-describedby="inputGroupFileAddon" multiple="">
                            <label class="custom-file-label mt-2" for="inputGroupFile04">選擇檔案</label>
                          </div>
                        </div>
                  </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
            <button type="button" class="btn btn-primary" id="addIdeaBtn">新增</button>
          </div>
        </div>
      </div>
  </div>
  <!-- 新增想法的彈出視窗 -->

  <!-- 閱讀想法或修改想法的彈出視窗 -->
  <div class="modal fade" id="editAndReadIdea" tabindex="-1" role="dialog" aria-labelledby="editAndReadIdeaCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editAndReadIdeaLongTitle">閱讀想法</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="mt-2 ml-3 mr-3">

          <ul class="nav nav-tabs" id="ideaTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="readIdea-tab" data-toggle="tab" href="#readIdeaTab" role="tab" aria-controls="readIdeaTab" aria-selected="true">閱讀</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="editIdea-tab" data-toggle="tab" href="#editIdeaTab" role="tab" aria-controls="editIdeaTab" aria-selected="false">修改</a>
            </li>
          </ul>

        </div>

        <div class="tab-content" id="myTabContent">          
          
          <div class="tab-pane fade show active" id="readIdeaTab" role="tabpanel" aria-labelledby="readIdea-tab">
            <div class="modal-body"  style="min-height: 200px;">
              <div id="ReadIdeaRoot">
              閱讀
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary">收藏</button>
              <button type="button" class="btn btn-primary">回覆</button>
            </div>
          </div>

          <div class="tab-pane fade" id="editIdeaTab" role="tabpanel" aria-labelledby="editIdea-tab">
            <div class="modal-body">
              <div id="EditIdeaRoot">
                <p><b>標題</b><input class="form-control" type="text" name="idea_title_edit" id="idea_title_edit" required="required"></p>
                <div class="ideaTagEdit"></div>
                <div class="row">
                  <div class=" col-3">
                    <div class="btn-group-vertical" style="width: 100%;">
                        <button type="button" class="btn border-color-green scaffold">我想知道</button>
                        <button type="button" class="btn border-color-green scaffold">我的想法</button>
                        <button type="button" class="btn border-color-green scaffold">我的理論</button>
                        <button type="button" class="btn border-color-green scaffold">新資訊或參考來源</button>
                        <button type="button" class="btn border-color-green scaffold">另一個觀點是</button>
                        <button type="button" class="btn border-color-green scaffold">我覺得更好的想法</button>
                        <button type="button" class="btn border-color-green scaffold">有發展性的想法</button>
                    </div>
                  </div>
                  <div class="col-9">
                      <textarea class="nodeEditor" id="editIdeaSummernote"></textarea>
                      <div class="input-group">
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" id="inputGroupFileEdit" aria-describedby="inputGroupFileAddon" multiple="">
                          <label class="custom-file-label mt-2" for="inputGroupFile04">選擇檔案</label>
                        </div>
                      </div>
                      <div id="nodeFiles" style="margin-top: 8px;">

                      </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" id="editIdeaBtn">儲存</button>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>
  <!-- 閱讀想法或修改想法的彈出視窗 -->

  <!-- 實作節點的彈出視窗 -->
  <div class="modal fade" id="readProjectModal" tabindex="-1" role="dialog" aria-labelledby="readProjectModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="readProjectModalLongTitle">實作節點</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div id="readProjectModalRoot">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="replyBtn">回覆想法</button>
        </div>
      </div>
    </div>
  </div>
  <!-- 新增想法的彈出視窗 -->

</div>



<script type="text/javascript" src="/javascripts/projectDiscussion.js"></script>
