    <div id="cneter-content">
      <div class="row" style="margin-top: 35px;">
        <button class="col btn btn-outline-success" style="margin:15px 15px"  type='submit' data-toggle="modal" data-target="#addTask">新增任務</button>

      </div>
      <div class="row">

          <div class="col card column" style="min-height:80vh; margin-left: 10px; padding: 0;">
            <h5 class="card-header" style="background-color: rgba(238, 235, 229, 0.822); border-bottom: none;"><b>暫存區</b></h5>
            <div class="card-body tasks backlog" data-status="backlog"  style="background-color: rgba(238, 235, 229, 0.822);">

              
            </div>
          </div>


            <div class="col card column" style="min-height:80vh; padding: 0;">
              <h5 class="card-header" style="background-color: rgba(212, 209, 203, 0.74); border-bottom: none;"><b>待辦</b></h5>
              <div class="card-body tasks todo" data-status="todo" style="background-color: rgba(212, 209, 203, 0.74);">
  
                
              </div>
            </div>
  

            <div class="col card column" style="min-height:80vh; padding: 0;">
              <h5 class="card-header" style="background-color: rgba(190, 189, 185, 0.774); border-bottom: none;"><b>進行中</b></h5>
              <div class="card-body tasks doing" data-status="doing" style="background-color: rgba(190, 189, 185, 0.774);">
  
                
              </div>
            </div>
  
              <div class="col card column" style="min-height:80vh; padding: 0;">
                <h5 class="card-header" style="background-color: rgba(168, 166, 162, 0.747); border-bottom: none;"><b>完成</b></h5>
                <div class="card-body tasks done" data-status="done" style="background-color: rgba(168, 166, 162, 0.747);">
                    
                    <!-- <div class="card task-card"  style="margin-bottom: 15px;">
                        <div class="card-body ">研究題目和動機撰寫</div>
                        <div class="card-footer text-right" data-taskidnow="30" style="padding: 0.3rem 1.25rem;">
                            王小明 2020-06-03 12:36 <i class="fas fa-pencil-alt mr-1 editTaskIcon" style="color: rgb(4, 4, 194);"></i><i class="far fa-trash-alt deleteTaskIcon" style="color: rgb(207, 0, 0);" aria-hidden="true"></i>
                        </div>
                    </div> -->
                  
                </div>
              </div>
    


      <!-- 新增任務的彈出視窗 -->
      <div class="modal fade" id="addTask" tabindex="-1" role="dialog" aria-labelledby="addTaskCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="addTaskLongTitle">新增任務</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
              <div class="row">
                <p class="col-sm-2">任務內容：</p>
                <div class="col-sm-10">
                  <textarea class="form-control task_content" rows="3"></textarea>
                </div>

              </div>
              
              <div class="row" style="margin-top: 10px;">
                <p class="col-sm-2">任務負責人：</p>
                <div class="col-sm-10">
                  <select id="add_task_member_name" class="custom-select task_member_name" name="task_member_name">
                    
                  </select>
                </div>
                
              </div>
              

            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal" id="addTaskBtn">新增</button>
            </div>
        </div>
        </div>
      </div>
      <!-- 新增任務的彈出視窗 -->

      <!-- 編輯任務的彈出視窗 -->
      <div class="modal fade" id="editTask" tabindex="-1" role="dialog" aria-labelledby="editTaskCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
          <h5 class="modal-title" id="editTaskLongTitle">編輯任務</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
          </button>
          </div>
          <div class="modal-body">
            <div class="row">
              <p class="col-sm-2">任務內容：</p>
              <div class="col-sm-10">
                <textarea class="form-control edit_task_content2"rows="3"></textarea>
              </div>

            </div>
            
            <div class="row" style="margin-top: 10px;">
              <p class="col-sm-2">任務負責人：</p>
              <div class="col-sm-10">
                <select class="custom-select task_member_name2" name="task_member_name">
                  
                </select>
              </div>
              
            </div>
            

          </div>
          <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
          <button type="button" class="btn btn-primary" data-dismiss="modal" id="editTaskBtn">儲存</button>
          </div>
        </div>
        </div>
      </div>
      <!-- 編輯任務的彈出視窗 -->

      <!-- 確認是否刪除任務 -->
      <div class="modal fade" id="checkRemoveTask" tabindex="-1" role="dialog" aria-labelledby="checkRemoveTaskLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-body"><h5>確定要刪除此任務？</h5></div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
              <button type="button" class="btn btn-danger" data-dismiss="modal" id="deleteTaskBtn">確定刪除</button>
            </div>
          </div>
        </div>
      </div>
      <!-- 確認是否刪除任務 -->
      
    
    </div>


    <input type="hidden" id="gid" value="<%= gid %>">
    <input type="hidden" id="member_id" value="<%= member_id %>">
    <input type="hidden" id="member_name" value="<%= member_name %>">

    <input type="hidden" id="groupsMemberData" value="<%= JSON.stringify(groupsMemberData) %>">
    <input type="hidden" id="groupsTaskData" value="<%= JSON.stringify(groupsTaskData) %>">
